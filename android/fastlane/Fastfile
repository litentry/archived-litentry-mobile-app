fastlane_require 'dotenv'

default_platform(:android)

platform :android do

  desc "Submit a new Beta Build"
  lane :beta do
    gradle(task: "clean")
    gradle(
      task: "bundleRelease",
      flags: "--no-daemon --max-workers 2"
    )
    upload_to_play_store(
      track: "internal",
      json_key_data: ENV['PLAY_STORE_CONFIG_JSON'],
    )
  end

end
