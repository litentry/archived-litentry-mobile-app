{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "lib": ["es2017"],
    "allowJs": true,
    "jsx": "react-native",
    "rootDir": ".",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noErrorTruncation": true,
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["src/ui/*"],
      "context/*": ["src/context/*"],
      "src/*": ["src/*"],
      "image/*": ["src/image/*"],
      "svg/*": ["src/svg/*"],
      "service/*": ["src/service/*"],
      "@hooks/*": ["src/hooks/*"],
      "assets/*": ["assets/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
