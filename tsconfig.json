{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "lib": ["es2017"],
    "allowJs": true,
    "jsx": "react-native",
    "rootDir": ".",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": ".",
    "noUncheckedIndexedAccess": true,
    "paths": {
      "context/*": ["src/context/*"],
      "presentational/*": ["src/presentational/*"],
      "screen/*": ["src/screen/*"],
      "layout/*": ["src/layout/*"],
      "src/*": ["src/*"],
      "image/*": ["src/image/*"],
      "svg/*": ["src/svg/*"],
      "service/*": ["src/service/*"],
      "hook/*": ["src/hook/*"],
      "assets/*": ["assets/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
