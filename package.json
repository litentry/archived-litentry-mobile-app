    "proxy-polyfill": "^0.3.2",
    "qrcode-generator": "^1.4.4",
    "react": "16.13.1",
    "react-native": "0.63.3",
    "react-native-animatable": "^1.3.3",
    "react-native-camera": "^3.40.0",
    "react-native-chart-kit": "^6.9.0",
    "react-native-crypto": "^2.2.0",
    "react-native-device-info": "^7.3.1",
    "react-native-gesture-handler": "^1.8.0",
    "react-native-haptic-feedback": "^1.11.0",
    "react-native-in-app-message": "^1.0.32",
    "react-native-linear-gradient": "^2.5.6",
    "react-native-logs": "^2.2.1",
    "react-native-modalize": "^2.0.6",
    "react-native-permissions": "^3.0.0-beta.2",
    "react-native-portalize": "^1.0.7",
    "react-native-qrcode-scanner": "^1.4.1",
    "react-native-randombytes": "^3.6.0",
    "react-native-reanimated": "^1.13.2",
    "react-native-safe-area-context": "^3.1.9",
    "react-native-screens": "^2.15.0",
    "react-native-sensitive-info": "^5.5.8",
    "react-native-substrate-sign": "^1.1.1",
    "react-native-svg": "^12.1.0",
    "react-native-vector-icons": "^7.1.0",
    "react-native-webview": "^11.0.0",
    "readable-stream": "^1.0.33",
    "rn-nodeify": "^10.2.0",
    "stream-browserify": "^1.0.0",
    "url": "^0.10.3",
    "util": "^0.10.4"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/runtime": "^7.8.4",
    "@react-native-community/eslint-config": "^1.1.0",
    "@types/jest": "^25.2.3",
    "@types/lodash": "^4.14.165",
    "@types/react": "^17.0.2",
    "@types/react-native": "^0.63.2",
    "@types/react-test-renderer": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "babel-jest": "^25.1.0",
    "eslint": "^6.5.1",
    "husky": "^5.1.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.5.4",
    "metro-react-native-babel-preset": "^0.59.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.0",
    "react-test-renderer": "16.13.1",
    "reactotron-react-native": "^5.0.0",
    "typescript": "^3.8.3"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "react-native": {
    "console": "console-browserify",
    "crypto": "react-native-crypto",
    "_stream_transform": "readable-stream/transform",
    "_stream_readable": "readable-stream/readable",
    "_stream_writable": "readable-stream/writable",
    "_stream_duplex": "readable-stream/duplex",
    "_stream_passthrough": "readable-stream/passthrough",
    "stream": "stream-browserify"
  },
  "browser": {
    "console": "console-browserify",
    "crypto": "react-native-crypto",
    "_stream_transform": "readable-stream/transform",
    "_stream_readable": "readable-stream/readable",
    "_stream_writable": "readable-stream/writable",
    "_stream_duplex": "readable-stream/duplex",
    "_stream_passthrough": "readable-stream/passthrough",
    "stream": "stream-browserify"
  },
  "lint-staged": {
    "*.+(ts|tsx)": "eslint --fix",
    "*.+(ts|tsx|json)": "prettier --write"
  }
}
